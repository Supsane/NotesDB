<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_item_notes_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Notes Title"
        android:textStyle="bold"
        android:padding="@dimen/list_item_notes_text_padding"
        android:textColor="@color/colorList"/>

    <TextView
        android:id="@+id/list_item_notes_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Notes Date"
        android:padding="@dimen/list_item_notes_text_padding"
        android:textColor="@color/colorList"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorList"
        android:padding="@dimen/list_item_notes_text_padding"/>

</LinearLayout>